<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/entry_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_summary"
        android:textColor="@color/colorTextSummary"
        android:textSize="@dimen/summary_text"/>

    <TextView
        android:id="@+id/entry_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todo_description"
        android:textSize="@dimen/description_text"/>
</LinearLayout>